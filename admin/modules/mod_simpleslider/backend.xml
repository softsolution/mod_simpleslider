<?xml version="1.0" encoding="windows-1251"?>
<backend>    
    <module>
        <id>mod_simpleslider</id>
        <title>Слайдер SimpleSlider для УК</title>
    </module>
    <params>
        <param type="number" name="num" title="Количество позиций для показа" units="шт." default="10" />
        <param type="list" name="sort" title="Критерий выбора">
            <option title="Рейтинг" value="rating" />
            <option title="Просмотры" value="hits" />
            <option title="Новинки" value="new" />  
        </param>
        <param type="list_db" name="cat_id" title="Позиции из рубрики" src="cms_uc_cats" src_title="title" src_value="id" tree="1">
            <option title="-- Все рубрики --" value="0" />
        </param>
        <param type="flag" name="subs" title="Вместе с подрубриками" default="off" />
        <param type="flag" name="fulllink" title="Показывать ссылку на каталог" default="on" />
    </params>
</backend>
